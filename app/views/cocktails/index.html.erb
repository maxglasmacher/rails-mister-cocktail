<div>
  <div class="wrappercock">
    <h1>surfers cocktail club</h1>
   <div class="cocktail">
     <div class="liquid"></div>
     <div class="ice-cubes">
       <div class="ice-cube ice-cube-1"></div>
       <div class="ice-cube ice-cube-2"></div>
       <div class="ice-cube ice-cube-3"></div>
     </div>
     <div class="lemon-slice"></div>
     <div class="leaves">
       <div class="leave leave-1"></div>
       <div class="leave leave-2"></div>
       <div class="leave leave-3"></div>
     </div>
     <div class="straw"></div>
     <div class="straw-surface"></div>
     <div class="shadow"></div>
    </div>
  </div>
  <div class="container text-center">
    <div class="row text-center">
      <% @cocktails.each do |cocktail| %>
        <div class="col-xs-4">
          <div class="card">
            <div class="cocktail-link">
              <%= link_to cocktail.name, cocktail_path(cocktail) %>
            </div>
            <div class="delete-item btn btn-primary">
              <%= link_to cocktail_path(cocktail), method:"delete" do %>
                <i class="fas fa-trash-alt"></i>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>



